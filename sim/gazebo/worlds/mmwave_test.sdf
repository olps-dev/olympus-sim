<?xml version="1.0" ?>
<sdf version="1.7">
  <world name="mmwave_test">
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>

    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>

    <!-- Furniture models - confirmed working -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/table</uri>
      <name>table_1</name>
      <pose>0 0 0 0 0 0</pose>
    </include>
    
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/sofa</uri>
      <name>sofa_1</name>
      <pose>-2 -2 0 0 0 0.7</pose>
    </include>
    
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/bookshelf</uri>
      <name>bookshelf_1</name>
      <pose>-3 2 0 0 0 -1.57</pose>
    </include>
    
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/chair</uri>
      <name>chair_1</name>
      <pose>0.5 -1.5 0 0 0 3.14</pose>
    </include>
    
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/chair</uri>
      <name>chair_2</name>
      <pose>-0.5 -1.5 0 0 0 3.14</pose>
    </include>
    
    <!-- Additional furniture to create a more complete room -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/bookshelf</uri>
      <name>bookshelf_2</name>
      <pose>-3 -2 0 0 0 -1.57</pose>
    </include>
    
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/table</uri>
      <name>table_2</name>
      <pose>-2 0 0 0 0 0</pose>
    </include>
    
    <!-- Vehicle model - confirmed working -->
    <include>
      <uri>https://fuel.gazebosim.org/1.0/openrobotics/models/hatchback</uri>
      <name>car_1</name>
      <pose>5 5 0 0 0 0</pose>
      <static>true</static>
    </include>

    <model name="mmwave_sensor">
      <pose>0 0 1 0 0 0</pose>
      <link name="link">
        <sensor name="mmwave" type="custom">
          <always_on>1</always_on>
          <visualize>true</visualize>
          <update_rate>10</update_rate>
          <topic>/mmwave/points</topic>
          <plugin
            filename="MmWaveSensorPlugin"
            name="olympus_sim::MmWaveSensorPlugin">
            <horizontal_fov>1.5708</horizontal_fov>
            <vertical_fov>0.5236</vertical_fov>
            <horizontal_resolution>32</horizontal_resolution>
            <vertical_resolution>16</vertical_resolution>
            <min_range>0.05</min_range>
            <max_range>50</max_range>
            <noise_mean>0</noise_mean>
            <noise_stddev>0.01</noise_stddev>
            <default_rcs>1.0</default_rcs>
            <min_rcs>0.1</min_rcs>
            <max_radial_velocity>30.0</max_radial_velocity>
          </plugin>
        </sensor>
      </link>
    </model>
  </world>
</sdf>
