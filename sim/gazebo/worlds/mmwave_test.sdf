<?xml version="1.0" ?>
<sdf version="1.10">
  <world name="mmwave_test">
    <!-- Physics -->
    <physics name="1ms" type="dartsim">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>
    
    <!-- Scene properties -->
    <scene>
      <ambient>0.4 0.4 0.4 1.0</ambient>
      <background>0.7 0.7 0.7 1.0</background>
      <shadows>true</shadows>
    </scene>
    
    <!-- Sun light source -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>
    
    <!-- Ground plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>
    
    <!-- Include our mmWave sensor model -->
    <include>
      <uri>model://mmwave_sensor</uri>
      <name>mmwave_sensor</name>
      <pose>0 0 1.0 0 0 0</pose>
    </include>
    
    <!-- Test objects for the sensor to detect -->
    <!-- Box at 5 meters away -->
    <model name="box1">
      <pose>5 0 0.5 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.166667</ixx>
            <iyy>0.166667</iyy>
            <izz>0.166667</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>1 1 1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>1 1 1</size>
            </box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
            <specular>1 0 0 1</specular>
          </material>
        </visual>
      </link>
      <static>true</static>
    </model>
    
    <!-- Moving sphere to demonstrate Doppler velocity -->
    <model name="sphere1">
      <pose>0 3 0.5 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>1.0</mass>
          <inertia>
            <ixx>0.1</ixx>
            <iyy>0.1</iyy>
            <izz>0.1</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <sphere>
              <radius>0.5</radius>
            </sphere>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.5</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0 0 1 1</ambient>
            <diffuse>0 0 1 1</diffuse>
            <specular>0 0 1 1</specular>
          </material>
        </visual>
      </link>
      <!-- Add a plugin to make the sphere oscillate -->
      <plugin
        filename="libgz-sim-trajectory-follower-system.so"
        name="gz::sim::systems::TrajectoryFollower">
        <link_name>link</link_name>
        <trajectory id="0" type="circle">
          <waypoint>
            <time>0</time>
            <pose>0 3 0.5 0 0 0</pose>
          </waypoint>
          <waypoint>
            <time>2</time>
            <pose>0 -3 0.5 0 0 0</pose>
          </waypoint>
          <waypoint>
            <time>4</time>
            <pose>0 3 0.5 0 0 0</pose>
          </waypoint>
        </trajectory>
      </plugin>
    </model>
    
  </world>
</sdf>
